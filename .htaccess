# === Kanonische URL + /index.html -> / ================================
<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Alles auf https + www kappen
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\.kulagin-vermietung\.de$ [NC]
  RewriteRule ^(.*)$ https://www.kulagin-vermietung.de/$1 [R=301,L]

  # 2) /index.html dauerhaft auf / umleiten (nur wenn vom Client explizit angefordert)
  RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
  RewriteRule ^index\.html$ / [R=301,L]
</IfModule>
